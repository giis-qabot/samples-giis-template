<project name="aggregate-junit-reports" default="aggregate" basedir="." >

	<description>Generates aggregate reports in junit styoe</description>
    <!--
    Execute from commandline: ant -file aggregate.xml
    Aggregated surefire reports are generated from maven by adding this target: surefire-report:report -Daggregate=true
    -->
  <target name="aggregate" description="limpia archivos temporales y generados">
    <junitreport>
      <fileset dir=".">
        <include name="**/target/surefire-reports/TEST-*.xml" />
      </fileset>
      <report format="frames" todir="target/site/junit-frames" />
      <report format="noframes" todir="target/site/junit-noframes" />
</junitreport>
  </target>
</project>